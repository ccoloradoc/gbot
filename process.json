{
  "apps": [{
      "name": "gbot",
      "script": "./bin/www",
      "watch": false,
      "env": {
        "NODE_ENV": "production",
        "PORT": "8080",
        "IP_ADDRESS": "127.0.0.1",
        "ACCESS_TOKEN": "facebook_key",
        "VERIFY_TOKEN": "autogenerated_key",
        "MQ_URL": "amqp://<user>:<password>@<rabbitmq>/<service>"
      }
    }, {
      "name": "gbot-extractor",
      "script": "./app/services/extractor.js",
      "watch": false,
      "env": {
        "NODE_ENV": "production",
        "MQ_URL": "amqp://<user>:<password>@<rabbitmq>/<service>"
      }
    }, {
      "name": "gbot-storage",
      "script": "./app/services/storage.js",
      "watch": false,
      "env": {
        "NODE_ENV": "production",
        "MONGO_DB": "mongodb://<user>:<password>@<host>:<port>/<database>",
        "MQ_URL": "amqp://<user>:<password>@<rabbitmq>/<service>"
      }
    }]
}
